<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="tvNameMainPortrait">
        <item name="android:textSize">80dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="btnMainPortrait">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">25dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:layout_margin">@dimen/btnMargin</item>
        <item name="android:radius">@dimen/btnRadius</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="rowSimpleCalcPortrait">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="btnSimpleCalcPortrait">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/simpleButtonHeight</item>
        <item name="android:textSize">@dimen/simpleButtonTextSize</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:layout_margin">@dimen/btnMargin</item>
        <item name="android:radius">@dimen/btnRadius</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="tvCurrentSimpleCalcPortrait">
        <item name="android:layout_weight">2</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/simpleCurrent</item>
        <item name="android:lines">2</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:ellipsize">start</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="tvResultSimpleCalcPortrait">
