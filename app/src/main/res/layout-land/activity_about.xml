<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkGrey">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/tvAboutTitle"
                android:text="Application name" />

            <TextView
                style="@style/tvAboutContent"
                android:text="Calc Mat" />

            <TextView
                style="@style/tvAboutTitle"
                android:text="Application Author" />

            <TextView
                style="@style/tvAboutContent"
                android:text="Mateusz Pruss" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/tvAboutTitle"
                android:text="Short description" />

            <TextView
                style="@style/tvAboutContent"
                android:text="This is a calculator application that contains 2 views, simple and advanced calculator. This project was created as part of PAM course" />

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>